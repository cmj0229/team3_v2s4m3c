<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    
  <!-- Oracle Connection Pool, 안정적인 데이터베이스 연결 지원, MyBATIS 사용 -->
  <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource"> 
    <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
    <property name="url" value="jdbc:oracle:thin:@localhost:1521:XE" /><!-- localhost에 서버ip가 들어감-->
    <property name="username" value="ai6" />
    <property name="password" value="1234" /> <!-- 아이디와 패스워드 바뀔시 이부분이 바뀜-->
  </bean>
 
  <!-- MySQL: & → ＆amp; 엔티티로 변경 (mysql설정 참고용)-->
<!--
  <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
    <property name="driverClassName" value="org.gjt.mm.mysql.Driver" />
    <property name="url" value="jdbc:mysql://localhost:3306/web?useUnicode=true＆amp;characterEncoding=euckr" />
    <property name="username" value="root" />
    <property name="password" value="1234" />
  </bean> 
-->
 
  <!-- typeAliasesPackage: MyBATIS에서 클래스 사용시 패키지 생략 가능,
        mapperLocations: MyBATIS 설정 파일인 xml의 위치 등록 
        클래스의 객체 만드는 공장-->
  <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
  <!-- Session을 만드는 설정 Session : 메모리가 할당되서 작업을 처리할 수 있는 환경이 만들어진 상태-->
    <property name="dataSource" ref="dataSource" />
    <!-- dataSource : 데이터베이스연결-->    
    <!-- 아래부분은 매핑할 xml파일이 있는 패키지경로를 설정한다. -->
    <property name="typeAliasesPackage"   
                   value="dev.mvc.surv,
                            dev.mvc.surv_item,
                            dev.mvc.surv_apply" /> <!-- 여기에 패키지 추가를 해야 클래스 실행했을때 자동으로 인식 함-->
                            <!-- 테이블이 새로 만들어지면 이런 작업들(servlet-context,root-context수정)을 해야 함-->
                   <!-- name="typeAliasesPackage 패키지가 자동으로 만들어짐-->
    <property name="mapperLocations" value="classpath:mybatis/*.xml" />
  </bean><!-- mapper : mybatis를 사용하겠다는 뜻-->
  
  <!-- Spring이 MyBATIS를 사용할 때 호출하는 객체 -->
  <bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
    <constructor-arg ref="sqlSessionFactory"/>
  </bean>
 
  <!-- DAO Interface 스캔 -->
  <bean class= "org.mybatis.spring.mapper.MapperScannerConfigurer">
    <property name="basePackage" value="dev.mvc" />
  </bean>
 
</beans>
      